rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default: deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Customers collection - require authentication for all operations
    match /customers/{customerId} {
      // Authenticated users can read/write
      allow read, write: if request.auth != null;
      
      // Public read access ONLY when accessKey in query matches the document's accessKey exactly
      // This requires the client to provide the correct accessKey as a query parameter
      allow read: if resource.data.accessKey == request.query.accessKey;
    }
    
    // Transactions collection - require authentication
    match /transactions/{transactionId} {
      allow read, write: if request.auth != null;
    }
    
    // Expenses collection - require authentication
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null;
    }
  }
}
