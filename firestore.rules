rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default: deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Customers collection - require authentication for all operations
    // Both admin users (email/password) and customer portal (anonymous auth) need auth
    match /customers/{customerId} {
      // Any authenticated user can read (admin or anonymous portal user)
      allow read: if request.auth != null;
      // Only non-anonymous authenticated users can write
      allow write: if request.auth != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }
    
    // Transactions collection - require authentication
    match /transactions/{transactionId} {
      // Any authenticated user can read (admin or anonymous portal user)
      allow read: if request.auth != null;
      // Only non-anonymous authenticated users can write
      allow write: if request.auth != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }
    
    // Expenses collection - require admin authentication (no anonymous access)
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }
  }
}
